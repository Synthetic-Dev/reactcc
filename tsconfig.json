{
	"$schema": "https://raw.githubusercontent.com/Synthetic-Dev/TypeScriptToLua/master/tsconfig-schema.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"moduleResolution": "node",
		"strict": false,
		"declaration": true,
		"outDir": "dist",
		"removeComments": false,
		"types": [
			"@jackmacwindows/lua-types/cc",
			"@ccts/cc-types",
			"@ccts/craftos-types"
		]
	},
	"tstl": {
		"buildMode": "library",
		"luaTarget": "CC",
		"luaLibImport": "require"
	},
	"include": ["src"]
}
